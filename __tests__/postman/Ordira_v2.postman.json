        {
            "name": "Orders Management (Admin/Kasir)",
            "description": "Protected endpoints for order management",
            "item": [
                {
                    "name": "List All Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/orders?status=PENDING&limit=20",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "orders"],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "PENDING",
                                    "description": "PENDING, PAID, PROCESSING, READY, DONE, CANCELLED"
                                },
                                {
                                    "key": "paymentStatus",
                                    "value": "UNPAID",
                                    "description": "UNPAID, PENDING, PAID, FAILED, CANCELLED",
                                    "disabled": true
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                },
                                {
                                    "key": "offset",
                                    "value": "0",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Order Status",
                    "request": {
                        "method": "PATCH",
                        "header": [
