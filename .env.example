# Environment variables template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://postgres:your-password@localhost:5432/db_ordira?schema=public"

# JWT Configuration
# Generate a strong secret key for production
# Example: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN=1d

# Kolosal AI Configuration
KOLOSAL_API_KEY="your-kolosal-api-key-here"
KOLOSAL_MODEL_ID="your-model-id-here"

# Application URL
# Used for Midtrans callbacks and email links
APP_URL="http://localhost:3000"

# Midtrans Payment Gateway Configuration
# Get these keys from: https://dashboard.sandbox.midtrans.com/settings/config_info
# For production, use: https://dashboard.midtrans.com/settings/config_info
MIDTRANS_SERVER_KEY="SB-Mid-server-YOUR-SERVER-KEY-HERE"
MIDTRANS_CLIENT_KEY="SB-Mid-client-YOUR-CLIENT-KEY-HERE"

# Email Configuration (SMTP)
# Gmail example - Requires App Password (not your regular Gmail password)
# How to get Gmail App Password:
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate password for "Mail" app
# 4. Use that password here
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"

# Alternative SMTP Services:
# - Mailgun: smtp.mailgun.org:587
# - SendGrid: smtp.sendgrid.net:587
# - Mailtrap (testing): smtp.mailtrap.io:2525

# Admin User Credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin123"